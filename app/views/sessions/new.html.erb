<header>
<div class='title'>
  <%= image_tag('buzz_bus.png', :size => "100x100") %>
  <h1>BuzzBus</h1>
</div>
  <nav>
    <ul>
    <% if signed_in? %>
      <li<a><%= current_user.email %></a></li>
      <li><a id="phone" href='/locations/new'><%= User.find(session[:user_id]).phone %></a></li>
      <li><%= link_to "Sign Out", signout_path, method: :delete %></li>
      <li><%= link_to "Home", locations_path %></li>
    <% else %>
      <li><%= link_to "Home", locations_path %></li>
      <li><%= link_to "Register", new_user_path %></li>
    <% end %>
    </ul>
  </nav>
</header>
<h2>Sign in</h2>
<div class="row">
  <div>
  <%= form_for(:session, url: sessions_path, html: { class: "form-horizontal" }) do |f| %>

    <div class="form-group">
      <%= f.label :email, class: "col-sm-2 control-label" %>
      <div class="col-sm-4"><%= f.text_field :email %></div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: "col-sm-2 control-label" %>
      <div class="col-sm-4"><%= f.password_field :password %></div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-2"><%= f.submit "Sign In", class: "btn btn-large btn-primary" %></div>
    </div>
  <% end %>
  </div>
</div>

