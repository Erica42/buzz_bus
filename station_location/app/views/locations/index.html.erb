<header>
<h1>Station Location</h1>
  <nav>
    <ul>
    <% if signed_in? %>
      <li><%= link_to current_user.email, current_user %></li>
      <li><%= link_to "Sign Out", signout_path, method: :delete %></li>
    <% else %>
      <li><%= link_to "Sign In", new_session_path %></li>
    <% end %>
    </ul>
  </nav>
</header>
<div id="show_buses"></div>
<% if session[:user_id] != nil %>
<h2 id="set_location">Select your Destination:</h2>
<div>
  <%= form_for(:location, url: new_location_path, method: "get") do |f| %>
<%= select_tag(:city_id, options_for_select(locations_for_select)) %>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-6"><%= f.submit "Set Destination", class: "btn btn-large btn-primary" %></div>
</div>
<% end %>
<% end %>
<div id="map"></div>

 <script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDooIF08mMEEguEYandpeyRUdDwDaMNgh8&callback=initMap">
</script>

